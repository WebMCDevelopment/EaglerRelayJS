{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node"
  },
  "include": [
    "src/index.ts",
    "src/**/*",
    "src/types/**/*"
  ]
}
